<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#006078</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingDatePickerStyle" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:colorAccent" tools:targetApi="lollipop">@android:color/holo_blue_light</item>
    </style>
    <style name="SearchViewTheme" parent="@android:style/Widget.Material.SearchView" tools:targetApi="lollipop">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:completionHint">@string/search_hint</item>
    </style>
    <style name="CustomToolbarThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>
</resources>
