<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/..."
    android:layout_margin="5dp"
    card_view:cardcornerradius="4dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvFull">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivArticleImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="@dimen/margin8"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            tools:src="@drawable/article_image_placeholder" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@id/ivArticleImage"
            android:layout_margin="@dimen/margin8"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Study Focuses on Repeated Hits, Not Concussions"
            />

        <TextView
            android:id="@+id/tvNewsDesk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_below="@id/tvTitle"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding4"
            android:layout_margin="@dimen/margin8"
            android:background="@android:color/holo_green_dark"
            tools:text="Sports" />

        <TextView
            android:id="@+id/tvSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNewsDesk"
            android:layout_margin="@dimen/margin8"
            tools:text="With the world championship approaching, the organization must either negotiate with the players or take another route...." />
    </RelativeLayout>
</android.support.v7.widget.CardView>
